<div id="sign-up-block" class="authentication-block">

	<%= render 'layouts/logo_250' %>

  <h4>Forgot your password?</h4>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%#= devise_error_messages! %>
    <div class="field form-group">
	    <%= f.email_field :email, autofocus: true, :placeholder => "Email", :class => "form-control"  %>
	  </div>
	  <div class="actions">
	    <%= f.submit "Send reset password instructions", :class => "btn kariton-btn btn-block" %>
	  </div>
  <% end %>
</div>

<div class="authentication-block">
  <p align="center"><a data-toggle="modal" data-target="#myModal">Sign In</a> or <%= link_to "Sign up", new_registration_path(resource_name) %></p>
</div>

<!-- modal -->
<%= render 'users/sessions/sign_in_modal' %>
